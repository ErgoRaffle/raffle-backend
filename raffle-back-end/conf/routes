# Routes
# This file defines all application routes (Higher priority routes first)

GET     /                                        controllers.HomeController.index
GET     /raffle                                  controllers.HomeController.getRaffles(offset: Int ?= 0, limit: Int ?= 100)
GET     /raffle/:tokenId                         controllers.HomeController.getRafflesByTokenId(tokenId: String)
POST    /raffle/add                              controllers.HomeController.addRaffle
GET     /service/start                           controllers.HomeController.createService()
POST    /raffle/donate                           controllers.HomeController.donateToId
GET     /getToken/:tokenId                       controllers.HomeController.getRafflesByTokenId(tokenId: String)
GET     /raffle_share                            controllers.HomeController.servicePercent()
GET     /*file                                   controllers.HomeController.assetOrDefault(file)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                            controllers.Assets.versioned(path="/public", file: Asset)
